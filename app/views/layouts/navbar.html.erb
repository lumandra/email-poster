<div class='navbar navbar-default navbar-static-top'>
  <div class='container'>
    <%= link_to 'CSMC', root_path, class: 'navbar-brand'%>
    <ul class='nav navbar-nav'>
      <% if user_signed_in? %>
          <li>
            <%= link_to 'Manage User Reports', user_reports_path %>
          </li>
          <% if current_user.is_admin? %>
            <li>
              <%= link_to 'Reports', reports_path %>
            </li>
          <% end %>
      <% end %>
    </ul>
    <% if user_signed_in? %>
        <%= link_to 'Logout', destroy_user_session_path, :method => :delete, class: 'navbar-brand navbar-right' %>
    <% else %>
        <%= link_to 'Sign In', new_user_session_path, class: 'navbar-brand navbar-right' %>
    <% end %>
  </div>
</div>
