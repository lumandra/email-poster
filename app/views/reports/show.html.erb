<div class="container reports">
  <div>
    <h1 class="title">Show report</h1>
      <h4>Title: <%= @report.title%></h4>
      <h4>Email to: <%= @report.email_to%></h4>
    </br>
    <div class="actions">
      <%= link_to 'Edit', edit_report_path(@report), class: 'btn btn-warning' %>
      <%= link_to 'Destroy', @report, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      <%= link_to 'Back', reports_path%>
    </div>
  </div>
  <div>
    <%= render 'slack_channels/index' %>
    <%= link_to 'New Slack Channel', new_report_slack_channel_path(@report.id), class: "btn btn-success"   %>
  </div>
</div>
<%= render 'history', reports: @report, emails: @emails%>

